root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{go,json,yml,yaml}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

[*.{jsx,js,tsx,ts}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2
